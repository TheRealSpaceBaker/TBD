        <ListView Name="LvSearchPatient" Canvas.Top="170" HorizontalAlignment="Left" Height="33" VerticalAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" RenderTransformOrigin="0.5,0.5" Width="472" Canvas.Left="16">
