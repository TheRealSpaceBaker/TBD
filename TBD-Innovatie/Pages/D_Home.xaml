        <Rectangle Name="WitBlok" HorizontalAlignment="Left" Height="162" Fill="#D9D9D9" Stroke="LightGray" VerticalAlignment="Center" Width="505" RadiusX="20" RadiusY="20" Canvas.Top="133"/>
